@model IEnumerable<BookMgtSystem.Models.Author>

@{
    ViewBag.Title = "Author List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Authors List</h2>

<div style="padding:10px;">
    @Html.ActionLink("Add Author", "Create","", new { @class = "btn btn-primary" })
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.AuthorId }, new { @class="btn btn-primary"}) |
            @Html.ActionLink("Details", "Details", new { id = item.AuthorId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AuthorId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
